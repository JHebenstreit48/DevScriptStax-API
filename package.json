{
  "name": "devscriptstax-api",
  "version": "1.0.0",
  "description": "Backend Notes seeder for DevScriptStax notes project",

  "scripts": {
    "seed": "ts-node -r tsconfig-paths/register src/scripts/importNotes.ts",
    "gen:md": "tsx -r tsconfig-paths/register src/scripts/cli/gen-md.ts",

    "nav:btns": "tsx -r tsconfig-paths/register src/scripts/cli/sync-nav-btns.ts",
    "nav:btns:dry": "tsx -r tsconfig-paths/register src/scripts/cli/sync-nav-btns.ts --dry-run",

    "ping:firebase": "node dist/scripts/pingFirestore.js",
    "build": "tsc"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.6.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.15.21",
    "fast-glob": "^3.3.3",
    "marked": "^16.4.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2"
  }
}